{
  "name": "loot-rarity",
  "version": "1.1.0",
  "description": "Get the rarity level of a Loot (lootproject.com) item",
  "author": "Pierre Bertet",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup --dts --format esm,cjs",
    "dev": "tsup --watch --dts --format esm,cjs",
    "generate-rarity": "ts-node scripts/generate-items-rarity.ts > data/items-rarity-hashes.json",
    "check-distribution": "ts-node scripts/rarity-distribution.ts"
  },
  "devDependencies": {
    "@types/node": "^16.7.5",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "tsup": "^4.14.0",
    "typescript": "^4.4.2"
  },
  "tsup": {
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "entryPoints": [
      "src/index.ts"
    ]
  }
}
